<widget xmlns="http://www.w3.org/ns/widgets" 
	xmlns:gap="http://phonegap.com/ns/1.0" 
	id="com.LaMelon.aldo" 
	version="1" android-versionCode="1"
	<?xm1 version= "1.0" encoding="UTF-8"?>
	<widget xm1ns="http://www.w3.org/ns/widgets" xm1ns:gap="http://phonegap.com/ns/1.0" id="net.lemau.gamecontoh"
	version="1">
>
	<name>LaMelon</name>
	<description>Aplikasi panduan menanam melon dengan teknik hidroponik berbasis android</description>
	<author href="link web / fb" email="aldoa7875@gmail.com">Aldo Aprio</author>

	
	<content src="index.html"/>
	<icon src="icon.png" />
	<icon src="icon-128.png" width="128" height"128" />
	<icon src="icon-256.png" width="256" height"128" gap:role="default"/>

	<platform name="android">
		<allow-intent href="market:*"/>
		<allow-intent href="http://*/*"/>
		<allow-intent href="https://*/*"/>
		<allow-intent href="tel:*"/>
		<allow-intent href="sms:*"/>
		<allow-intent href="mailto:*"/>
		<allow-intent href="geo:*"/>

		<preference name="enabled" value="true"/>
		<preference name="deployment-target" value="9.0" />
		<preference name="android-minSdkVersion" value="19" />
		<preference name="android-targetSdkVersion" value="29" />
	

	</platform>	

	

	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/file" />
	<preference name="phonegap-version" value="cli-9.0.0" />
	<preference name="orientation" value="portrait" />
	<preference name="fullscreen" value="true" />

	<access origin="*" />
	<plugin name="cordova-plugin-whitelist" />
	<plugin name="cordova-plugin-file" />
	<plugin name="cordova-plugin-media" />

</widget>